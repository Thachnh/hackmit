.container
  #map_canvas
  :css
    #map_canvas {
      width: 100%;
      height: 400px;
      background-color: #CCC;
    }
  %script{src: "http://maps.googleapis.com/maps/api/js?sensor=false"}
  :javascript
    // initialize your map as normal
    var options = {
        center: new google.maps.LatLng(39.960771, -75.200162),
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        zoom: 13
    };
    var map = new google.maps.Map(document.getElementById('map_canvas'), options);

    var coords = [
        [39.95383,-75.175323],
        [39.949932,-75.171933],
        [39.95383,-75.175323],
        // and additional coordinates, just add a new item
    ];

    // iterate over your coords array
    for (var i = 0; i < coords.length; i++) {
        // create a closure for your latitude/longitude pair
        (function(coord) {
            // set the location...
            var latLng = new google.maps.LatLng(coord[0], coord[1]);
            // ...and add the Marker to your map
            var marker = new google.maps.Marker({
                position: latLng,
                map: map
            });
        })(coords[i]);
    };  

    google.maps.event.addDomListener(window, 'load', initialize);

  %p#notice= notice

  .row-fluid
    .span7
      %img{src: "http://theoldreader.com/kittens/670/414"}/
      %h2 
        = @tour.name
    .span5
      = @tour.loc_name
      %p
        %b Tour guide:
        = "#{@tour.user.first_name} #{@tour.user.last_name}"
      %p
        %b Loc name:
        = @tour.loc_name
      %p
        %b Price:
        - if !@tour.prize.nil? and @tour.prize > 0
          = "$#{@tour.prize}"
        - else
          = "FREE"

      %table

        - @scheduled_tours.each do |scheduled_tour|
          %tr
            %td= "#{scheduled_tour.start_time.to_time.strftime('%b %e, %l:%M %p')} - #{scheduled_tour.end_time.to_time.strftime('%b %e, %l:%M %p')}"
            %td= "(#{total_booking(scheduled_tour.bookings)} Bookers)"
            - if @tour.user == current_user
              %td= ""
            - else
              %td= link_to 'Book This Tour', new_booking_path(scheduled_tour.id), :class => 'btn btn-success'
      %p
        - if @tour.user == current_user
          = link_to 'Schedule Time', new_scheduled_tour_path(@tour.id), :class => 'btn btn-primary'
        - else
          %td= "Change..."
  %p
    = @tour.description 
    %br


